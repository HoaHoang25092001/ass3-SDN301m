<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/index.css" type="text/css" />
    <title><%=title%></title>
  </head>

  <body>
    <%- include('include//navbarHome.ejs')%>
    <div
      class="bg-img"
      style="
        background-image: url('https://i.pinimg.com/originals/46/01/38/460138552be375a3f663228c29a08102.jpg');
      "
    >
      <div class="container">
        <div class="row">
          <div class="alert-group">
            <% if(success_msg!='' ){%>
            <div class="alert alert-success alert-dismissible" role="alert">
              <%= success_msg %>
            </div>
            <% } %> <% if(error_msg!='' ){%>
            <div class="alert alert-warning alert-dismissible" role="alert">
              <%= error_msg %>
            </div>
            <% } %> <% if(error!='' ){%>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <%= error %>
            </div>
            <% } %>
          </div>

          <% players.forEach(function(player){%> 
            <% if(JSON.stringify(player.isCaptain)===JSON.stringify('Captain')){%>
              <div class="col-md-4">
                <div class="profile-card-4 text-center">
                  <img src=<%=player.image
                  %> alt="" width="100%" height="65%">
                  <div class="profile-content">
                    <div class="profile-name">
                      <a class=""
                        href="/players/details/<%= player._id%>"><%= player.name %></a>
                    </div>
                    <div class="profile-description">
                      <p><%= player.isCaptain %></p>
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="profile-overview">
                          <p>GOALS</p>
                          <h4><%= player.goals %></h4>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="profile-overview">
                          <p>NATION</p>
                          <% if(player.nation){%>
                            <img src="<%=player.nation.image%>" alt=""
                                class="player-nation">
                            <%}%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
            <%})%>
        </div>
      </div>
    </div>
  </body>
</html>
